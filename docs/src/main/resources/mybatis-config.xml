<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" 
    "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <typeAliases>
        <package name="com.example.certificate.domain.model"/>
        <package name="com.example.certificate.domain.event"/>
    </typeAliases>
    
    <typeHandlers>
        <typeHandler handler="org.apache.ibatis.type.EnumTypeHandler"
            javaType="com.example.certificate.domain.model.DeploymentStatus"/>
    </typeHandlers>
    
    <mappers>
        <mapper resource="mybatis/mapper/CertificateMapper.xml"/>
        <mapper resource="mybatis/mapper/DeploymentMapper.xml"/>
    </mappers>
</configuration>