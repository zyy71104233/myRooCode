<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.certmgr.domain.infrastructure.persistence.mybatis.DomainMapper">
    <resultMap id="domainResultMap" type="com.certmgr.domain.domain.model.DomainName">
        <result property="domainName" column="domain_name"/>
    </resultMap>

    <select id="findByDomainName" resultMap="domainResultMap">
        SELECT * FROM domains WHERE domain_name = #{domainName}
    </select>

    <insert id="save" parameterType="com.certmgr.domain.domain.model.DomainName">
        INSERT INTO domains (domain_name)
        VALUES (#{domainName.domainName})
    </insert>

    <delete id="deleteByDomainName">
        DELETE FROM domains WHERE domain_name = #{domainName}
    </delete>
</mapper>